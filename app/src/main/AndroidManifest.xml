<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <queries>
        <package android:name="com.tencent.mm" />
        <package android:name="com.eg.android.AlipayGphone" />
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="weixin" />
        </intent>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="alipays" />
        </intent>
    </queries>

    <application
        android:name="io.github.vvb2060.ims.Application"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:localeConfig="@xml/locales_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/JetpackSplashTheme">

        <activity
            android:name="io.github.vvb2060.ims.ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.TurbolIms">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.github.vvb2060.ims.ui.LogcatActivity"
            android:exported="true"
            android:theme="@style/Theme.TurbolIms" />
        <activity
            android:name="io.github.vvb2060.ims.ui.DumpActivity"
            android:exported="false"
            android:theme="@style/Theme.TurbolIms" />

        <service
            android:name="io.github.vvb2060.ims.tiles.SIM1VoLTETileService"
            android:exported="true"
            android:label="@string/qs_toggle_tile_title_sim_1"
            android:icon="@mipmap/ic_launcher"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
            <meta-data android:name="android.service.quicksettings.TOGGLEABLE_TILE" android:value="true" />
        </service>
        <service
            android:name="io.github.vvb2060.ims.tiles.SIM2VoLTETileService"
            android:exported="true"
            android:label="@string/qs_toggle_tile_title_sim_2"
            android:icon="@mipmap/ic_launcher"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
            <meta-data android:name="android.service.quicksettings.TOGGLEABLE_TILE" android:value="true" />
        </service>
        <service
            android:name="io.github.vvb2060.ims.tiles.SIM1IMSStatusTileService"
            android:exported="true"
            android:label="@string/qs_status_tile_title_sim_1"
            android:icon="@mipmap/ic_launcher"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
        <service
            android:name="io.github.vvb2060.ims.tiles.SIM2IMSStatusTileService"
            android:exported="true"
            android:label="@string/qs_status_tile_title_sim_2"
            android:icon="@mipmap/ic_launcher"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <provider
            android:name="io.github.vvb2060.ims.ShizukuProvider"
            android:authorities="${applicationId}.shizuku"
            android:exported="true"
            android:multiprocess="false"
            android:permission="android.permission.NETWORK_SETTINGS" />
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.logcat_fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/logcat_filepaths" />
        </provider>

        <receiver
            android:name="io.github.vvb2060.ims.UpdateInstallReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>
    </application>

    <instrumentation
        android:name="io.github.vvb2060.ims.privileged.ImsModifier"
        android:label="IMS Configurator"
        android:targetPackage="${applicationId}" />
    <instrumentation
        android:name="io.github.vvb2060.ims.privileged.SimReader"
        android:label="SimReader"
        android:targetPackage="${applicationId}" />
    <instrumentation
        android:name="io.github.vvb2060.ims.privileged.BrokerInstrumentation"
        android:label="BrokerInstrumentation"
        android:targetPackage="${applicationId}" />
    <instrumentation
        android:name="io.github.vvb2060.ims.privileged.ConfigReader"
        android:label="ConfigReader"
        android:targetPackage="${applicationId}" />
    <instrumentation
        android:name="io.github.vvb2060.ims.privileged.ImsStatusReader"
        android:label="ImsStatusReader"
        android:targetPackage="${applicationId}" />
    <instrumentation
        android:name="io.github.vvb2060.ims.privileged.ImsResetter"
        android:label="ImsResetter"
        android:targetPackage="${applicationId}" />
    <instrumentation
        android:name="io.github.vvb2060.ims.privileged.CaptivePortalFixer"
        android:label="CaptivePortalFixer"
        android:targetPackage="${applicationId}" />
</manifest>
